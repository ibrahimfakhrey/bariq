# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bariq

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Nafath API (Saudi National SSO)
NAFATH_API_URL=https://api.nafath.sa
NAFATH_API_KEY=your-nafath-api-key
NAFATH_APP_ID=your-nafath-app-id

# SMS Gateway
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=BARIQ

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# PayTabs Payment Gateway
# Get credentials from PayTabs Dashboard: https://merchant.paytabs.com/
PAYTABS_PROFILE_ID=your-profile-id
PAYTABS_SERVER_KEY=your-server-key
PAYTABS_CLIENT_KEY=your-client-key

# Currency: SAR for Saudi Arabia, EGP for Egypt, AED for UAE
PAYTABS_CURRENCY=SAR

# Region: saudi, egypt, uae, global
# IMPORTANT: Must match your PayTabs account region
# - saudi: https://secure.paytabs.sa
# - egypt: https://secure-egypt.paytabs.com
# - uae: https://secure.paytabs.com
# - global: https://secure-global.paytabs.com
PAYTABS_REGION=saudi

# Sandbox mode: true for testing, false for production
PAYTABS_SANDBOX=true

# Payment URLs - MUST be updated for production deployment
# Return URL: Where customer is redirected after payment
# Callback URL: Webhook endpoint for payment notifications (MUST be publicly accessible)
PAYMENT_RETURN_URL=http://localhost:5001/payment/complete
PAYMENT_CALLBACK_URL=http://localhost:5001/api/v1/webhooks/paytabs

# Payment settings
PAYMENT_EXPIRY_MINUTES=30
MIN_PAYMENT_AMOUNT=10

# Firebase Cloud Messaging (Push Notifications)
# Option 1: Path to service account JSON file
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
# Option 2: JSON content directly (for platforms like Heroku/Koyeb)
FIREBASE_CREDENTIALS_JSON=
